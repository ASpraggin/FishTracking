	journal = {Journal of Experimental Biology},
	author = {Kowalko, Johanna},
	month = feb,
	year = {2020},
	file = {Full Text:/home/yaouen/Zotero/storage/HXRFB7G3/Kowalko - 2020 - Utilizing the blind cavefish Astyanax mexicanus to.pdf:application/pdf}
}

