	author = {Patch, Adam and Paz, Alexandra and Holt, Karla and Duboue, Erik and Kowalko, Johanna E. and Keene, Alex C. and Fily, Yaouen},
	month = aug,
	year = {2020},
	note = {Publisher: Cold Spring Harbor Laboratory
Section: New Results},
	pages = {2020.01.31.929323},
	file = {Full Text PDF:/home/yaouen/Zotero/storage/NMW9ZRHK/Patch et al. - 2020 - Kinematic analysis deconstructs the evolved loss o.pdf:application/pdf;Snapshot:/home/yaouen/Zotero/storage/VU5YME32/2020.01.31.html:text/html}
